extends layout

block content
  include header
  h1= title
  p Welcome to #{title}

    block content
      section.login-content
        .login-box
          div.form-group
            form.login-form(method="post", id="loginForm")
              block.form-group
                label Usuario
                input.form-control(id="username", type="text", name="User", placeholder="Ingrese Usuario")
              block.form-group
                label Password
                input.form-control(id="password", type="password", name="Password", placeholder="Ingrese Contrase√±a")
              p
              block.form-group
                input.btn.btn-success.btn-block(type="submit", value="Ingresar")
      div.container
        div.content
          table.table.table-striped
            thead
              tr
                th Table
                th Heading
            tbody
              tr
                td Blah
                td Test
              tr
                td Hello
                td World

  include footer